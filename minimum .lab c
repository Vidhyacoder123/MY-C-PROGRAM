#include<stdio.h>
int ispassed(int m1,int m2,int m3)
{
    if(m1>=40&&m2>=40&&m3>=40)
    return 1;
    
    else return 0;
}
int main(){
    int s1,s2,s3;
    float average;
    printf("enter marks for s1");
    scanf("%d",&s1);
    printf("enter marks for s2");
    scanf("%d",&s2);
     printf("enter marks for s3");
    scanf("%d",&s3);
    average=(s1+s2+s3)/3.0;
    printf("%2f\n",average);
    if(s1,s2,s3)
    printf("result:pass\n");
    else
    printf("result:fail\n");
}
    
    
